{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"baseUrl": "./",
		"paths": {
			"~/*": ["src/*"]
		},
    "moduleResolution": "Node16",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
    "noImplicitReturns": true,
		"sourceMap": true,
		"outDir": "dist"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
